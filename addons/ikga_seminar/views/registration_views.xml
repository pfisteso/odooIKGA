<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List UI - Default -->
        <record id="view_registration_list" model="ir.ui.view">
            <field name="name">ikga.registration.list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="country_id"/>
                    <field name="participates_in_seminar"/>
                    <field name="grade_description"/>
                    <field name="room_category_id"/>
                </list>
            </field>
        </record>

        <!-- Form UI - Default -->
        <record id="view_registration_form" model="ir.ui.view">
            <field name="name">ikga.registration.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Create / Edit Registration">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="birthdate"/>
                            </group>
                            <group>
                                <field name="country_id"/>
                                <field name="country_manager_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="participates_in_seminar"/>
                            </group>
                            <group>
                                <field name="grade_number"/>
                                <field name="grade_label"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Arrival &amp; Departure">
                                <group>
                                    <group>
                                        <field name="needs_shuttle"/>
                                        <field name="airport"/>
                                        <field name="arrival_datetime"/>
                                        <field name="departure_datetime"/>
                                    </group>
                                    <group>
                                        <field name="needs_parking_lot"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Room &amp; Board">
                                <group>
                                    <group string="Room">
                                        <field name="room_category_id"/>
                                        <field name="room_id"/>
                                    </group>
                                    <group string="Board">
                                        <field name="is_vegetarian"/>
                                        <field name="is_vegan"/>
                                        <field name="has_allergies"/>
                                        <field name="allergen_list"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Payment">
                                <group>
                                    <field name="amount_seminar"/>
                                    <field name="amount_hotel_room"/>
                                    <field name="amount_total"/>
                                </group>
                            </page>

                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- List UI - Travel -->
        <record id="view_registration_list_travel" model="ir.ui.view">
            <field name="name">ikga.registration.list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="needs_parking_lot"/>
                    <field name="needs_shuttle"/>
                    <field name="airport"/>
                    <field name="arrival_datetime"/>
                    <field name="departure_datetime"/>
                </list>
            </field>
        </record>

        <!-- List UI - Accounting -->
        <record id="view_registration_list_accounting" model="ir.ui.view">
            <field name="name">ikga.registration.list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="participates_in_seminar"/>
                    <field name="room_category_id"/>
                    <field name="amount_seminar"/>
                    <field name="amount_hotel_room"/>
                    <field name="amount_total"/>
                </list>
            </field>
        </record>


        <!-- Default View -->
        <record id="action_ikga_registration" model="ir.actions.act_window">
            <field name="name">IKGA Registrations</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[['partner_type', '=', 'registration']]</field>
            <field name="context">{'partner_type': 'registration'}</field>
        </record>

        <record model="ir.actions.act_window.view" id="registration_list">
            <field name="sequence" eval="1"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_registration_list"/>
            <field name="act_window_id" ref="action_ikga_registration"/>
        </record>

        <record model="ir.actions.act_window.view" id="registration_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_registration_form"/>
            <field name="act_window_id" ref="action_ikga_registration"/>
        </record>

        <!-- View for Travel Information -->
        <record id="action_ikga_registration_travel" model="ir.actions.act_window">
            <field name="name">IKGA Registrations - Travel</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list</field>
            <field name="domain">[['partner_type', '=', 'registration']]</field>
        </record>

        <record model="ir.actions.act_window.view" id="registration_travel_list">
            <field name="sequence" eval="1"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_registration_list_travel"/>
            <field name="act_window_id" ref="action_ikga_registration_travel"/>
        </record>

        <!-- View for Accounting -->
        <record id="action_ikga_registration_accounting" model="ir.actions.act_window">
            <field name="name">IKGA Registrations - Accounting</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list</field>
            <field name="domain">[['partner_type', '=', 'registration']]</field>
        </record>

        <record model="ir.actions.act_window.view" id="registration_accounting_list">
            <field name="sequence" eval="1"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_registration_list_accounting"/>
            <field name="act_window_id" ref="action_ikga_registration_accounting"/>
        </record>


    </data>
</odoo>