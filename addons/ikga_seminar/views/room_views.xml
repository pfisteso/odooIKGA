        <!-- Rooms: List UI -->
        <record id="view_room_list" model="ir.ui.view">
            <field name="name">ikga.room.list</field>
            <field name="model">ikga_seminar.room</field>
            <field name="arch" type="xml">
                <list>
                    <field name="room_number"/>
                    <field name="room_category"/>
                    <field name="max_capacity"/>
                    <field name="child_bed_available"/>
                    <field name="n_adults"/>
                    <field name="n_children"/>
                </list>
            </field>
        </record>

        <!-- Rooms: Form UI -->
        <record id="view_room_form" model="ir.ui.view">
            <field name="name">ikga.room.form</field>
            <field name="model">ikga_seminar.room</field>
            <field name="arch" type="xml">
                <form string="Create / Edit Room">
                    <sheet>
                        <field name="room_number"/>
                        <field name="room_category"/>
                        <field name="max_capacity"/>
                        <field name="child_bed_available"/>
                        <group>
                            <group string="Adults">
                                <field name="adults_ids" nolabel="1" readonly="1"/>
                            </group>
                            <group string="Children">
                                <field name="children_ids" nolabel="1" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Room Assignments: List UI -->
        <record id="view_room_assignment_list" model="ir.ui.view">
            <field name="name">ikga.room.list</field>
            <field name="model">ikga_seminar.room_assignment</field>
            <field name="arch" type="xml">
                <list>
                    <field name="guest_name"/>
                    <field name="guest_country"/>
                </list>
            </field>
        </record>


        <record id="action_ikga_rooms" model="ir.actions.act_window">
            <field name="name">Hotel Rooms</field>
            <field name="res_model">ikga_seminar.room</field>
            <field name="view_mode">list,form</field>
        </record>

